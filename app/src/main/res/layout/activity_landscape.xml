            android:onClick="goOperator"
            tools:ignore="ButtonStyle" />



    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softred"

            android:contentDescription="@string/mod"
            android:text="@string/mod"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperator"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonXy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softred"

            android:contentDescription="@string/xy"
            android:text="@string/xy"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperator"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softyellow"
            android:contentDescription="@string/one"
            android:text="@string/one"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperand"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softyellow"
            android:contentDescription="@string/two"
