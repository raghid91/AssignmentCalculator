    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonLeftBracket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softred"

            android:contentDescription="@string/leftBracket"
            android:onClick="goLeftBracket"
