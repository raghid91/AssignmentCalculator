<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.acer.assignmentcalculator.LandscapeActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/background"

    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:stretchColumns="0, 1, 2, 3, 4, 5" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="50sp" >

        <Button
            android:id="@+id/buttonHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softgrey"
            android:minHeight="50sp"

            android:contentDescription="@string/help"
            android:onClick="goHelp"
            android:text="@string/help"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:ignore="ButtonStyle" />


        <Button
            android:id="@+id/buttonMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softgrey"
            android:minHeight="50sp"

            android:contentDescription="@string/mode"
            android:text="@string/mode"
            android:textAppearance="?android:attr/textAppearanceLarge"

            android:onClick="goToStandard"
            tools:ignore="ButtonStyle" />

        <TextView
            android:id="@+id/outputView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="4"
            android:background="@color/softblue"

            android:gravity="right"
            android:text="@string/zero"
            android:textSize="40sp"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softgreen"

            android:contentDescription="@string/MS"
            android:text="@string/MS"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goMS"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softgreen"

            android:contentDescription="@string/MC"
            android:text="@string/MC"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goMC"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softred"
            android:contentDescription="@string/CE"
            android:text="@string/CE"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goCE"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softred"
            android:contentDescription="@string/C"
            android:text="@string/C"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goC"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonSqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softred"
            android:contentDescription="@string/sqrt"
            android:text="@string/sqrt"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goSqrt"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonDivide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softred"
            android:contentDescription="@string/divide"
            android:text="@string/divide"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperator"
            tools:ignore="ButtonStyle" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
