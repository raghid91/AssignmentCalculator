            android:onClick="goOperand"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softyellow"
            android:contentDescription="@string/nine"
            android:text="@string/nine"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperand"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/buttonMultiply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@color/softred"
            android:contentDescription="@string/multiply"
            android:text="@string/multiply"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goOperator"
            tools:ignore="ButtonStyle" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonX2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/softred"

            android:contentDescription="@string/x2"
            android:text="@string/x2"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:onClick="goX2"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/button10x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
